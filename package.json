{
   "name": "wglib",
   "version": "1.0.0",
   "description": "A library to draw simple interactive graphs - including css styling - based on Pixi.js.",
   "main": "./dist/wglib.js",
   "types": "./dist/wglib.d.ts",
   "files": [
      "dist"
   ],
   "scripts": {
      "webpack": "webpack",
      "webpack-dev-server": "webpack-dev-server --hot",
      "build": "npm run webpack --mode=production",
      "dev": "npm run webpack-dev-server -- --env.mode development --watch",
      "test": "npx jest",
      "code-coverage": "jest --coverage",
      "prettier": "npx prettier",
      "prettier:format": "npm run prettier -- --write src/**/*.ts",
      "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
      "lint-check": "npx eslint ./src/**/*.ts",
      "code-style-check": "npm run lint-check && npm run prettier:check",
      "killme": "Taskkill /IM node.exe /F",
      "prepublishOnly": "webpack --mode=production"
   },
   "author": "3ger",
   "license": "MIT",
   "dependencies": {
      "pixi-viewport": "^4.18.1",
      "pixi.js": "^5.3.7"
   },
   "devDependencies": {
      "@types/copy-webpack-plugin": "^6.4.0",
      "@types/html-webpack-plugin": "^3.2.4",
      "@types/jest": "^26.0.20",
      "@types/mini-css-extract-plugin": "^0.9.1",
      "@types/node": "^14.14.21",
      "@types/optimize-css-assets-webpack-plugin": "^5.0.2",
      "@types/terser-webpack-plugin": "^4.2.0",
      "@types/webpack": "^4.41.26",
      "@types/webpack-dev-server": "^3.11.1",
      "@types/webpack-merge": "^4.1.5",
      "@typescript-eslint/eslint-plugin": "^4.13.0",
      "@typescript-eslint/parser": "^4.13.0",
      "awesome-typescript-loader": "^5.2.1",
      "clean-webpack-plugin": "^3.0.0",
      "copy-webpack-plugin": "^6.4.1",
      "css-loader": "^5.0.1",
      "del-cli": "^3.0.1",
      "eslint": "^7.18.0",
      "eslint-config-prettier": "^6.15.0",
      "eslint-loader": "^4.0.2",
      "eslint-plugin-prettier": "^3.3.1",
      "html-webpack-plugin": "^4.5.1",
      "husky": "^4.3.8",
      "identity-obj-proxy": "^3.0.0",
      "jest": "^26.6.3",
      "jest-canvas-mock": "^2.3.0",
      "jsdom": "^16.4.0",
      "mini-css-extract-plugin": "^0.11.3",
      "optimize-css-assets-webpack-plugin": "^5.0.4",
      "prettier": "^2.2.1",
      "pretty-quick": "^3.1.0",
      "style-loader": "^2.0.0",
      "terser-webpack-plugin": "^4.2.3",
      "ts-jest": "^26.4.4",
      "ts-loader": "^8.0.14",
      "ts-node": "^9.1.1",
      "typescript": "^4.1.3",
      "typescript-plugin-css-modules": "^2.8.0",
      "webpack": "^4.46.0",
      "webpack-cli": "^3.3.12",
      "webpack-dev-server": "^3.11.2",
      "webpack-merge": "^5.7.3"
   },
   "jest": {
      "transform": {
         ".(ts|tsx)": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js"
      ],
      "moduleNameMapper": {
         ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
      },
      "setupFiles": [
         "jest-canvas-mock"
      ]
   }
}
