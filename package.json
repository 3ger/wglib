{
   "name": "wglib",
   "version": "1.0.7",
   "description": "A library to draw simple interactive graphs - including css styling - based on Pixi.js.",
   "main": "dist/main.js",
   "types": "dist/main.d.ts",
   "files": [
      "dist"
   ],
   "scripts": {
      "webpack": "webpack",
      "webpack-dev-server": "webpack-dev-server --hot",
      "build": "npm run webpack --mode=production",
      "dev": "npm run webpack-dev-server -- --env.mode development --watch",
      "test": "npx jest",
      "code-coverage": "jest --coverage",
      "prettier": "npx prettier",
      "prettier:format": "npm run prettier -- --write src/**/*.ts",
      "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
      "lint-check": "npx eslint ./src/**/*.ts",
      "code-style-check": "npm run lint-check && npm run prettier:check",
      "killme": "Taskkill /IM node.exe /F",
      "prepublishOnly": "webpack --mode=production"
   },
   "keywords": [
      "graph",
      "javascript",
      "typescript",
      "web",
      "pixijs"
   ],
   "author": "3ger",
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/3ger/wglib.git"
   },
   "homepage": "https://github.com/3ger/wglib",
   "bugs": {
      "url": "https://github.com/3ger/wglib/issues"
   },
   "private": false,
   "dependencies": {
      "pixi-viewport": "^4.18.1",
      "pixi.js": "^5.3.7"
   },
   "devDependencies": {
      "@types/copy-webpack-plugin": "^6.4.0",
      "@types/webpack": "^4.41.26",
      "@typescript-eslint/eslint-plugin": "^4.14.0",
      "@typescript-eslint/parser": "^4.14.0",
      "clean-webpack-plugin": "^3.0.0",
      "copy-webpack-plugin": "^6.4.1",
      "eslint": "^7.18.0",
      "eslint-config-prettier": "^6.15.0",
      "eslint-loader": "^4.0.2",
      "eslint-plugin-prettier": "^3.3.1",
      "npm-dts": "^1.3.6",
      "npm-dts-webpack-plugin": "^1.3.6",
      "prettier": "^2.2.1",
      "pretty-quick": "^3.1.0",
      "ts-loader": "^8.0.14",
      "typescript": "^4.1.3",
      "webpack": "^4.46.0",
      "webpack-cli": "^3.3.12"
   }
}
