{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "dev",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "goserve",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "promptOnClose": false,
            "problemMatcher": {
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^.*(Compiled successfully)|(.*Compiled with warnings.*).*$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*webpack-dev-server.*$",
                    "endsPattern": "^.*(Compiled successfully)|(.*Compiled with warnings.*).*$"
                }
            }
        },
        {
            "label": "killnode",
            "type": "shell",
            "command": "Taskkill",
            "args": [
                "/IM",
                "chrome.exe",
                "/F"
            ]
        },
        {
            "label": "killnpmme",
            "type": "npm",
            "script": "killme",
            "problemMatcher": []
        }
    ]
}